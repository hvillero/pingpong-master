<h1 class='page-header'>History</h1>
<% if @games.empty? %>
  <div class="alert alert-warning" role="alert">no games played yet, <%= link_to "log a game?", new_game_path %></div>
<% else %>
  <table class="table">
    <thead>
    <tr>
      <th>Date</th>
      <th>Opponent</th>
      <th>Score</th>
      <th>Result</th>
    </tr>
    </thead>
    <tbody>
    <% @games.each do | game | %>
      <tr>
        <td><%= game.gamed_at.strftime("%b %d")%></td>
        <td><%= opponent_name(game, current_user).capitalize %></td>
        <td><%= game_score(game) %></td>
        <td><%= winner_or_loser(game, current_user) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>